@if(Map is not null && Layer is not null)
{
    <GvCard Title="Description & Copyright">
        <GvCardContent>
            <MudTextField Label="Decription" T="string" Lines="5" @ref="description"
                          Text="@Map.GetLayerDescription(Layer.ID)"
                          OnBlur="()=>Map.SetLayerDescription(Layer.ID, description!.Value)" />
            <MudTextField Label="Copyright" T="string" Lines="5" @ref="copyright"
                          Text="@Map.GetLayerCopyrightText(Layer.ID)"
                          OnBlur="()=>Map.SetLayerCopyrightText(Layer.ID, copyright!.Value)" />
        </GvCardContent>
    </GvCard>
}

@code {
    [Parameter] public IMap? Map { get; set; }
    [Parameter] public ILayer? Layer { get; set; }

    private MudTextField<string>? description, copyright;
}